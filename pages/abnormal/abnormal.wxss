page { background-color: #f6f6f6; }
.app-container {
    padding: 0 30rpx;
}
.record-list {
    margin-top: 30rpx;
    padding-bottom: 30rpx;
}
.record-list .items {
    background-color: #fff;
    padding: 0 30rpx;
    padding-bottom: 40rpx;
    border-radius: 16rpx;
    margin-bottom: 30rpx;
}
.record-list .items-head {
    padding-top: 28rpx;
    padding-bottom: 24rpx;
    border-bottom: 1px solid #f6f6f6;
}
.record-list .items-head .title {
    font-weight: 600;
    font-size: 36rpx;
    color: #1A1A1A;
}
.record-list .items-head .status {
    font-size: 28rpx;
    color: #FF2020;
}
.record-list .items-timer {
    font-weight: 500;
    font-size: 32rpx;
    line-height: 44rpx;
    color: #1A1A1A;
    padding: 24rpx 0;
}
.record-list .items-info {
    padding: 24rpx 30rpx;
    background-color: #F8F8F8;
    border-radius: 16rpx;
    margin-bottom: 24rpx;
}
.record-list .items-info .item:nth-child(2) {
    padding-top: 24rpx;
    padding-bottom: 24rpx;
}
.record-list .items-info .item .label {
    color: #999;
    font-size: 32rpx;
    line-height: 44rpx;
}
.record-list .items-info .item .date {
    color: #1A1A1A;
    font-size: 32rpx;
    line-height: 44rpx;
}
.record-list .phone-msg {
    width: 100%;
    height: 132rpx;
    background-color: #f5f5f5;
    border-radius: 12rpx;
    font-size: 32rpx;
    color: #202020;
    font-weight: 600;
}
.record-list .phone-msg text:first-child {
    color: #999;
    font-weight: 500;
    margin-left: 30rpx;
    margin-right: 24rpx;
}
.record-list .phone-msg .icon-phone {
    width: 72rpx;
    height: 72rpx;
    margin-right: 30rpx;
}
.no-data {
    margin-top: 252rpx;
}
.no-pic image {
    width: 360rpx;
    height: 208rpx;
}
.no-text {
    margin-top: 44rpx;
    font-size: 29rpx;
    color: #666;
}