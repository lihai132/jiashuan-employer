.btn-group {
    width: 100%;
    border-top: 2rpx solid #f6f6f6;
    position: fixed;
    bottom: 0;
    background: #fff;
}
.share-info image {
    width: 40rpx;
    min-width: 40rpx;
    height: 40rpx;
}
.share-info .text {
    color: #666;
    font-size: 20rpx;
    line-height: 28rpx;
}
.btn-primary {
    width: 572rpx;
    height: 92rpx;
    line-height: 92rpx;
    border-radius: 46rpx;
    text-align: center;
    font-size: 34rpx;
    color: #fff;
    background: #ff8666;
}
.wx-mask {
	z-index: 999;
	width: 100%;
	height: 100%;
	background: rgba(29, 29, 29, 0.5);
	position: fixed;
	top: 0;
	left: 0;
}
.icon-up {
    width: 34rpx;
    height: 34rpx;
    position: fixed;
    top: 0;
    right: 128rpx;
}
.msg-box {
    margin-top: 30rpx;
    margin-right: 16rpx;
    border-radius: 8rpx;
    width: 344rpx;
    height: 152rpx;
    background: #fff;
    color: #1A1A1A;
    font-size: 28rpx;
}
.msg-box .circle {
    width: 6rpx;
    height: 6rpx;
    border-radius: 50%;
    background: #000;
    margin: 0 6rpx;
}
.msg-box .circle:nth-child(2) {
    width: 12rpx;
    height: 12rpx;
    margin-left: 0;
    margin-right: 0;
}