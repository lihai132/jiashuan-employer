page {
	height: 100%;
}
.monthly {
	height: 100%;
}
.monthly-nav {
	position: relative;
}
.monthly-nav .bg {
	width: 100%;
	height: 100%;
	position: absolute;
	top: 0;
	left: 0;
	z-index: -1;
}
.monthly-nav-title {
	padding-top: 80rpx;
	padding-left: 40rpx;
	margin-bottom: 40rpx;
}
.monthly-nav-title-text1, .monthly-nav-title-text2 {
	font-size: 52rpx;
	font-weight: 500;
	color: #FFFFFF;
	line-height: 74rpx;
}
.van-radio-group {
	margin-bottom: 94rpx;
}
.monthly-nav-list {
	width: 668rpx;
	max-height: 1448rpx;
	/* height:90rpx; */
	border-radius: 60rpx;
	background: #fff;
	margin: auto;
	padding-top: 50rpx;
	overflow: scroll;
}
.monthly-nav-list-item {
	display: flex;
	justify-content: space-between;
	align-items: center;
	padding-left: 48rpx;
	padding-right: 48rpx;
	padding-top: 30rpx;
	padding-bottom: 30rpx;
}
.monthly-nav-list-item.current .monthly-nav-list-item-right-name {
	color: #FF8666;
}
.monthly-nav-list-item-head-src {
	width: 180rpx;
	height: 180rpx;
}
.monthly-nav-list-item-right {
	display: flex;
	flex-direction: column;
	align-items: flex-end;
}
.monthly-nav-list-item-right-name {
	font-size: 36rpx;
	font-weight: 500;
	color: #1A1A1A;
	line-height: 50rpx;
	margin-bottom: 40rpx;
}
.monthly-nav-tipe {
	margin-top: 30rpx;
	font-size: 24rpx;
	font-weight: 400;
	color: #FF8666;
	line-height: 34rpx;
	padding-bottom: 74rpx;
	margin-left: 48rpx;
}

.nanny-list {
    width: 670rpx;
    margin: 0 auto;
}
.nanny-list .item {
    background-color: #fff;
    padding: 40rpx 48rpx;
    border-radius: 24rpx;
    margin-bottom: 24rpx;
}
.nanny-list .item:last-child {
    margin-bottom: 0;
}
.nanny-list .item .nanny-pic {
    position: relative;
}
.nanny-list .item .nanny-pic image {
    width: 180rpx;
    height: 180rpx;
    background: #F6F6F6;
    box-shadow: 0rpx 20rpx 40rpx -26rpx rgba(155, 67, 43, 0.3);
    border-radius: 10rpx;
    border: 8rpx solid #FFFFFF;
}
.nanny-list .item .nanny-pic .bottom-info {
    position: absolute;
    left: 8rpx;
    bottom: 16rpx;
    width: 180rpx;
    height: 40rpx;
    line-height: 40rpx;
    text-align: center;
    background: rgba(0, 0, 0, 0.5);
    font-size: 24rpx;
    color: #fff;
}
.nanny-list .item .nanny-info .nanny-name {
    color: #1A1A1A;
    font-size: 36rpx;
    line-height: 50rpx;
    font-weight: bold;
    margin-top: 42rpx;
}
.nanny-list .item .nanny-info .nanny-name.disabled {
    color: #ccc;
}
.nanny-list .item .nanny-info .nanny-check {
    border-radius: 50%;
    height: 36rpx;
    width: 36rpx;
    border: 2rpx solid #ccc;
    text-align: right;
    margin-top: 40rpx;
}

.nanny-footer {
	height: 172rpx;
	width: 100%;
	position: fixed;
	left: 0;
	bottom: 0;
	background: #fff;
	text-align: center;
}
.nanny-tips {
    height: 60rpx;
    line-height: 60rpx;
    background-color: #F8F8F8;
    text-align: center;
    font-size: 24rpx;
    color: #FF8666;
}