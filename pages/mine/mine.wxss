.menu-content {
    position: absolute;
    top: 300rpx;
    left: 0;
    width: 100%;
    background: #fff;
    border-radius: 24rpx 24rpx 0 0;
}
/* 头部样式 */
.header-container {
    display: flex;
    flex-direction: row;
    height: 334rpx;
    position: relative;
}
.header-bg {
    width: 100%;
    height: 100%;
}
.wx-container {
    position: absolute;
    width: 100%;
    height: 100%;
}
.user-contant {
    padding: 0 30rpx;
}
.wx-scanCode {
    height: 60px;
}
.wx-img {
    width: 40rpx;
    height: 40rpx;
    margin-top: 40rpx;
}
.wx-avatar image {
    width: 140rpx;
    height: 140rpx;
    border-radius: 50%;
    margin-right: 30rpx;
}
.message-left button {
    width: auto;
}
.wx-login {
    padding: 0;
    padding-left: 0;
    padding-right: 0;
    margin-left: 0;
    margin-right: 0;
    background-color: transparent;
    font-size: 36rpx;
    color: #202020;
    font-weight: bold;
    text-align: left;
    border-radius: 0;
}
.wx-phone {
    font-size: 36rpx;
    color: #202020;
}
.sign-out {
    font-size: 26rpx;
    color: #62481D;
    border-radius: 26rpx;
    border: 2rpx solid #62481D;
    padding: 6rpx 20rpx;
}
/* 菜单 */
.menu-box {
    padding: 0 40rpx;
}
.menu-item {
    padding: 30rpx 0;
}
.menu-item:first-child {
    margin-top: 15px;
}
.menu-icon image {
    width: 40rpx;
    height: 40rpx;
}
.menu-name {
    margin-left: 22rpx;
}
.menu-arror image {
    width: 14rpx;
    height: 24rpx;
}
/* 拨打电话列表样式 */
.mobile-container {
    height: 92%;
    width: 750rpx;
  }
  .mobile-list-title {
    height: 50rpx;
    line-height: 50rpx;
    text-align: center;
    color: #1A1A1A;
    font-size: 36rpx;
    margin-top: 50rpx;
    margin-bottom: 40rpx;
  }
  .mobile-list {
    height: calc(100% - 100rpx);
    padding: 0 30rpx;
    overflow: hidden;
    overflow-y: auto;
  }
  .mobile-list-item {
    border-top: 2rpx solid #f6f6f6;
    padding: 38rpx 0;
    height: 48rpx;
    line-height: 48rpx;
    font-size: 34rpx;
    color: #FF8666;
  }
  .mobile-list-item:first-child {
    border-top: none;
  }
  .mobile-list-item text {
    margin-right: 30rpx;
  }