page {
    background-color: #f5f5f5;
    height: 100%;
}
.app-body {
    height: 100%;
}
.bill-nodata {
    margin-top: 225rpx;
}
.nodata-image image {
    width: 360rpx;
    height: 209rpx;
}
.nodata-text {
    margin-top: 44rpx;
    color: #666666;
    font-size: 28rpx;
}
.bill-list {
    padding: 0 30rpx;
    width: 690rpx;
    padding-bottom: 30rpx;
}
.bill-list-item {
    margin-top: 30rpx;
}
.bill-list-item-head {
    height: 90rpx;
    line-height: 108rpx;
    font-size: 32rpx;
    color: #1A1A1A;
    text-align: center;
    background-color: #fff;
    border-top-left-radius: 12rpx;
    border-top-right-radius: 12rpx;
}
.bill-line {
    width: 100%;
    height: 37rpx;
}
.bill-list-item-box {
    margin-top: -10rpx;
    background-color: #fff;
    border-bottom-left-radius: 12rpx;
    border-bottom-right-radius: 12rpx;
}
.bill-paid {
    padding-top: 30rpx;
    padding-bottom: 60rpx;
    border-bottom: 1px solid #E6E6E6;
}
.bill-paid image {
    width: 156rpx;
    height: 132rpx;
}
.bill-paid-title {
    margin-top: 36rpx;
    margin-bottom: 10rpx;
    color: #1A1A1A;
    font-size: 44rpx;
    font-weight: 600;
}
.bill-paid-text {
    font-size: 24rpx;
    color: #999;
}
.bill-price {
    padding-top: 30rpx;
    padding-bottom: 80rpx;
    text-align: center;
    border-bottom: 1px solid #E6E6E6;
}
.bill-price .text {
    color: #999;
    font-size: 24rpx;
    line-height: 34rpx;
}
.bill-price .price {
    color: #1A1A1A;
    font-size: 80rpx;
    font-weight: 600;
    line-height: 112rpx;
}
.bill-price .price-block {
    margin-top: 50rpx;
    margin-bottom: 50rpx;
}
.bill-price .price-block .price-info {
    width: 570rpx;
    height: 100rpx;
    margin: 0 auto;
    background-color: #f6f6f6;
    border-radius: 8rpx;
    padding: 0 30rpx;
}
.bill-price .price-block .price-info .txt1 {
    color: #1d1d1d;
    font-size: 29rpx;
}
.bill-price .price-block .price-info .txt2 {
    color: #999999;
    font-size: 24rpx;
    margin-left: 16rpx;
}
.bill-price .button-price {
    width: 630rpx;
    height: 100rpx;
    line-height: 100rpx;
    margin: 0 auto;
    color: #fff;
    font-size: 32rpx;
    background: linear-gradient(90deg, #FFBB9F 0%, #FF8666 100%);
    border-radius: 8rpx;
}
.bill-subtotal {
    height: 102rpx;
    line-height: 102rpx;
    color: #333;
    font-size: 32rpx;
    margin: 0 30rpx;
    border-bottom: 1px solid #e6e6e6;
}
.bill-subtotal-input {
    color: #1A1A1A;
    margin-left: 32rpx;
    font-weight: 600;
}
.bill-info {
    padding: 40rpx 30rpx;
}
.bill-info-item {
    margin-bottom: 12rpx;
}
.bill-info-label {
    width: 140rpx;
    min-width: 140rpx;
    color: #1A1A1A;
    font-size: 26rpx;
    text-align: left;
}
.bill-info-input {
    font-size: 26rpx;
    line-height: 1.5;
    color: #999;
}
.bill-button {
    background-color: #fff;
    width: 100%;
    height: 112rpx;
    position: fixed;
    bottom: 0;
}
.bill-button text {
    width: 670rpx;
    height: 80rpx;
    line-height: 80rpx;
    background-color: #ff8666;
    border-radius: 50rpx;
    text-align: center;
    color: #fff;
}