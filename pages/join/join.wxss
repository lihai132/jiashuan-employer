.wx-img { width: 100%; }
.wx-line-img { width: 670rpx; height: 36rpx; }
.white-bg { background-color: #fff; }
.join-container {
    padding-top: 34rpx;
    padding-bottom: 48rpx;
}
.join-bg {
    width: 750rpx;
    height: 634rpx;
    overflow: hidden;
}
.join-content {
    width: 100%;
    background: linear-gradient(360deg, #F9BE81 0%, #FBE4BC 100%);
}
.join-container {
    width: 670rpx;
    margin: 0 auto;
}
.company-wrap {
    position: relative;
}
.join-warp {
    border-top-left-radius: 8rpx;
    border-top-right-radius: 8rpx;
}
.join-wrap-name {
    position: absolute;
    top: -32rpx;
    left: 42rpx;
}
.join-wrap-name image {
    width: 400rpx;
    height: 124rpx;
}
.join-wrap-content {
    position: relative;
    font-size: 28rpx;
    color: #666;
    /* padding-left: 40rpx; */
    /* padding-right: 42rpx; */
    padding-top: 118rpx;
    padding-bottom: 66rpx;
}
.join-wrap-content .title {
    font-size: 32rpx;
    font-weight: bold;
    color: #1D1D1D;
    line-height: 44rpx;
    padding-bottom: 12rpx;
    border-bottom: 2rpx solid #E6E6E6;
}
.join-wrap-content .content {
    margin-top: 32rpx;
    line-height: 52rpx;
}
.line-wrap {
    width: 670rpx;
    height: 36rpx;
    overflow: hidden;
}
/* 招聘信息 */
.join-warp {
    padding-top: 54rpx;
    padding-bottom: 94rpx;
    padding-left: 40rpx;
    padding-right: 42rpx;
    font-size: 28rpx;
}
.join-position text {
    font-size: 40rpx;
    font-weight: 400;
    color: #333;
}
.join-title {
    margin-top: 60rpx;
    margin-bottom: 26rpx;
}
.join-title text {
    background: linear-gradient(270deg, #FFBB9F 0%, #FF8666 100%);
    border-radius: 8rpx;
    color: #fff;
    font-size: 32rpx;
    height: 48rpx;
    line-height: 48rpx;
    padding: 0 20rpx;
}
/* 留下联系方式这一栏样式 */
.contact-wrap {
    padding-top: 48rpx;
    padding-bottom: 76rpx;
    border-bottom-left-radius: 8rpx;
    border-bottom-right-radius: 8rpx;
}
.contact-title {
    text-align: center;
    font-size: 36rpx;
    font-weight: bold;
    color: #1D1D1D;
}
.contact-form {
    width: 590rpx;
    margin: 0 auto;
    margin-top: 76rpx;
}
.contact-form-item {
    width: 590rpx;
    height: 80rpx;
    margin-bottom: 40rpx;
    border-radius: 50rpx;
    border: 2rpx solid #FF8666;
}
.form-item-label {
    width: 40rpx;
    height: 40rpx;
    overflow: hidden;
    margin-left: 48rpx;
}
.form-item-input {
    padding: 0 32rpx;
    font-size: 28rpx;
}
.form-item-input input {
    width: 100%;
}
.contact-btn {
    padding-top: 38rpx;
    width: 590rpx;
    margin: 0 auto;
}
.btn.btn-primary {
    width: 100%;
    color: #fff;
    font-size: 32rpx;
    background: linear-gradient(270deg, #FFBB9F 0%, #FF8666 100%);
}
.btn-round {
    border-radius: 50rpx;
}