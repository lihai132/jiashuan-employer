page {
    background-color: #f5f5f5;
    height: 100%;
}
.bg-while {
    background-color: #fff;
    padding: 0 30rpx;
}
.mt20 {
    margin-bottom: 20rpx;
}
.app-body {
    width: 750rpx;
    height: 100%;
}
.checkout-block {
    height: calc(100% - 100rpx);
}
.product-title {
    width: 100%;
    height: 44rpx;
    line-height: 44rpx;
    font-size: 32rpx;
    font-weight: 600;
    color: #1A1A1A;
    padding-top: 40rpx;
    padding-bottom: 30rpx;
}
.product-title .subtitle {
    color: #666;
    font-size: 24rpx;
    font-weight: 500;
    height: 32rpx;
    line-height: 32rpx;
}
/* 商品信息 */
.product-info {
    padding-bottom: 40rpx;
}
.product-info .product-left {
    margin-right: 20rpx;
    width: 160rpx;
}
.product-info .product-left image {
    width: 160rpx;
    min-width: 160rpx;
    height: 160rpx;
}
.product-info .product-right .title {
    color: #1A1A1A;
    font-size: 29rpx;
    height: 40rpx;
    line-height: 40rpx;
}
.product-info .product-right .attribute {
    color: #999;
    font-size: 24rpx;
    line-height: 32rpx;
    margin-top: 8rpx;
    margin-bottom: 8rpx;
    height: 64rpx;
}
.product-info .product-right .price {
    color: #FF2556;
    font-size: 36rpx;
    height: 42rpx;
    line-height: 42rpx;
    font-weight: bold;
}
.product-info .product-right .price .sign {
    font-size: 24rpx;
}
.product-info .product-right .quantity {
    font-size: 29rpx;
    color: #999;
}
/* 付款计划 */
.price-info .items {
    padding-top: 20rpx;
    padding-bottom: 18rpx;
    min-width: 74rpx;
}
.price-info .items .label .title {
    color: #1D1D1D;
    height: 40rpx;
    line-height: 40rpx;
    font-size: 29rpx;
}
.price-info .items .label .subtitle {
    color: #999;
    height: 34rpx;
    line-height: 34rpx;
    font-size: 24rpx;
}
.price-info .items .input .timer {
    border-radius: 4rpx;
    background: rgba(255, 134, 102, 0.1);
    padding: 0 10rpx;
    color: #ff8666;
    font-size: 20rpx;
    margin-right: 20rpx;
}
.price-info .items .input .price {
    color: #666;
    height: 40rpx;
    line-height: 40rpx;
    font-size: 29rpx;
}
.price-info .amount {
    height: 112rpx;
    border-top: 1px solid #e6e6e6;
    font-size: 29rpx;
}
.price-info .amount .label {
    color: #1d1d1d;
}
.price-info .amount .input {
    color: #1A1A1A;
    font-weight: 600;
}
/* 代付 */
.pay-wrapper {
    height: 176rpx;
}
.pay-wrapper .subtitle {
    font-size: 24rpx;
    color: #999;
    margin-top: -10rpx;
}
/* 底部按钮 */
.checkout-btn {
    width: 100%;
    height: 100rpx;
    background-color: #fff;
    position: fixed;
    bottom: 0;
}
.checkout-btn .btn-container {
    height: 100%;
}
.checkout-btn .total-text {
    margin-left: 40rpx;
    margin-right: 10rpx;
    color: #1a1a1a;
    font-size: 32rpx;
}
.checkout-btn .total-price {
    color: #FF2556;
    font-size: 36rpx;
    font-weight: bold;
}
.checkout-btn .button-submit {
    width: 220rpx;
    height: 80rpx;
    line-height: 80rpx;
    text-align: center;
    font-size: 28rpx;
    color: #fff;
    margin-right: 40rpx;
    background-color: #ff8666;
    border-radius: 40rpx;
}