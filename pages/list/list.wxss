.list-box {
    padding: 0 30rpx;
    padding-bottom: 40rpx;
}
.items-wrapper .items {
	background-color: #fff;
	padding: 24rpx;
	box-shadow: 0 0 60rpx 0 rgba(0, 0, 0, 0.06);
	border-radius: 36rpx;
	margin-top: 40rpx;
}
.items-wrapper .items-pic {
	width: 214rpx;
	height: 214rpx;
	min-width: 214rpx;
	margin-right: 30rpx;
}
.items-wrapper .items-pic image {
	width: 100%;
	height: 100%;
}
.items-wrapper .items-info {
	height: 232rpx;
}
.items-wrapper .items-info .title {
	font-size: 32rpx;
	color: #1A1A1A;
	line-height: 44rpx;
	font-weight: bold;
}
.items-wrapper .items-info .tag {
	padding: 0 10rpx;
	min-height: 28rpx;
	line-height: 28rpx;
	background: linear-gradient(135deg, #FE4F02 0%, #F86B39 100%);
	border-radius: 8rpx;
	font-size: 20rpx;
	color: #fff;
	margin-right: 8rpx;
}
.items-wrapper .items-info .subtitle {
	font-size: 28rpx;
	color: #959CA4;
	line-height: 40rpx;
	font-weight: 500;
	margin-top: 12rpx;
}
.items-wrapper .items-info .subtitle.active {
	color: #FF8666;
	font-size: 24rpx;
}
.items-wrapper .items-info .info {
	height: 60rpx;
}
.items-wrapper .items-info .price {
	color: #FD5209;
	font-size: 36rpx;
	font-weight: bold;
}
.items-wrapper .items-info .original-price {
	color: #999;
	font-size: 24rpx;
	margin-left: 6rpx;
	text-decoration: line-through;
	padding: 6rpx 0;
}
.items-wrapper .items-info .price .t1 {
	font-weight: bold;
	font-size: 24rpx;
	margin-right: 4rpx;
}
.items-wrapper .items-info .button-buy {
	width: 160rpx;
	height: 56rpx;
	line-height: 56rpx;
	background: linear-gradient(90deg, #FFBB9F 0%, #FF8666 100%);
	border-radius: 26rpx;
	text-align: center;
	color: #fff;
	font-size: 28rpx;
}
.time-warpper {
	color: #FD5209;
	font-weight: 500;
	font-size: 20rpx;
}
.time-warpper .time-count {
	position: relative;
	background-color: #FD5209;
	width: 32rpx;
	height: 32rpx;
	text-align: center;
	border-radius: 6rpx;
	color: #fff;
	font-size: 20rpx;
	line-height: 32rpx;
	margin: 0 2rpx;
}