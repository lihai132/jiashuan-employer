page {
    background-color: #f5f5f5;
}
.bg-while {
    background-color: #fff;
    padding: 0 30rpx;
}
.mb20 {
    margin-bottom: 20rpx;
}
.app-body {
    width: 750rpx;
}
.product-title {
    width: 100%;
    height: 44rpx;
    line-height: 44rpx;
    font-size: 32rpx;
    font-weight: bold;
    color: #1A1A1A;
    padding-top: 40rpx;
    padding-bottom: 30rpx;
}
.product-title .subtitle {
    color: #666;
    font-size: 24rpx;
    font-weight: 500;
    height: 32rpx;
    line-height: 32rpx;
}
/* 商品信息 */
.product-info {
    padding-bottom: 40rpx;
}
.product-info .product-left {
    margin-right: 20rpx;
    width: 160rpx;
}
.product-info .product-left image {
    width: 160rpx;
    min-width: 160rpx;
    height: 160rpx;
    border-radius: 12rpx;
}
.product-info .product-right .title {
    color: #1A1A1A;
    font-size: 32rpx;
    height: 40rpx;
    line-height: 40rpx;
}
.product-info .product-right .attribute {
    color: #999;
    font-size: 24rpx;
    line-height: 32rpx;
    margin-top: 8rpx;
    margin-bottom: 8rpx;
    height: 64rpx;
}
.product-info .product-right .price {
    color: #FD5209;
    font-size: 36rpx;
    height: 42rpx;
    line-height: 42rpx;
    font-weight: bold;
}
.product-info .product-right .price .sign {
    font-size: 24rpx;
    margin-right: 4rpx;
}
.product-info .product-right .quantity {
    font-size: 29rpx;
    color: #999;
}
/* 服务时间 */
.service-container {
    padding: 40rpx 30rpx;
}
.service-container .timer-info .title {
    font-weight: bold;
    color: #1A1A1A;
    font-size: 32rpx;
    line-height: 44rpx;
}
.service-container .timer-info .timer-list .item {
    width: 320rpx;
    height: 56rpx;
    line-height: 56rpx;
    border-radius: 28rpx;
    background-color: #f6f6f6;
    margin-right: 30rpx;
    color: #666;
    font-size: 28rpx;
    text-align: center;
    border: 2rpx solid transparent;
    margin-top: 30rpx;
}
.service-container .timer-info .timer-list .item:nth-child(2n) {
    margin-right: 0;
}
.service-container .timer-info .timer-list .item.on {
    background-color: rgba(255, 134, 102, 0.1);
    border: 2rpx solid #ff8666;
    color: #ff8666;
}

/* 预约信息 */
.reserve-container {
    padding: 40rpx 0;
}
.reserve-wrapper .title-info .title {
    font-size: 32rpx;
    font-weight: bold;
    color: #1a1a1a;
}
.reserve-wrapper .title-info image {
    width: 28rpx;
    height: 28rpx;
}
.reserve-wrapper .reserve-info {
    margin-top: 30rpx;
}
.reserve-wrapper .reserve-info .no-data-text {
    font-size: 26rpx;
    color: #FF8666;
    line-height: 32rpx;
}
.reserve-wrapper .reserve-info .items {
    margin-bottom: 24rpx;
}
.reserve-wrapper .reserve-info .items .label {
    width: 160rpx;
    min-width: 160rpx;
    line-height: 40rpx;
    color: #999;
    font-size: 28rpx;
}
.reserve-wrapper .reserve-info .items .info {
    line-height: 40rpx;
    color: #1D1D1D;
    font-size: 28rpx;
}
.reserve-wrapper .info-items {
    font-size: 28rpx;
}
/* 底部按钮 */
.checkout-btn {
    width: 100%;
    height: 122rpx;
    background-color: #fff;
    position: fixed;
    bottom: 0;
}
.checkout-btn .btn-container {
    height: 100%;
}
.checkout-btn .total-text {
    margin-left: 40rpx;
    margin-right: 10rpx;
    color: #1a1a1a;
    font-size: 32rpx;
}
.checkout-btn .total-price {
    color: #FD5209;
    font-size: 36rpx;
    font-weight: bold;
}
.checkout-btn .button-submit {
    width: 280rpx;
    height: 92rpx;
    line-height: 92rpx;
    text-align: center;
    font-size: 32rpx;
    color: #fff;
    margin-right: 40rpx;
    background-color: #ff8666;
    border-radius: 46rpx;
}
.checkout-btn .disabled {
    opacity: 0.5;
    cursor: not-allowed;
}
.fixed-wrap {
    position: fixed;
    width: 140rpx;
    height: 140rpx;
}
#contact {
    background-color: transparent;
	padding: 0;
	margin-left: 0;
} 
.fixed-wrap .chat-img {
    width: 140rpx;
    height: 140rpx;
}

.van-dialog__button {
    width: 50% !important;
}